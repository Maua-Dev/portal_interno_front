{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "semi": "off",
    "quotes": ["warn", "single"],
    "prettier/prettier": "warn",
    "comma-dangle": "warn",
    "no-new": "off",
    "no-unused-vars": "off",
    "no-unused-expressions": "warn",
    "no-unused-labels": "warn",
    "accessor-pairs": "off",
    "camelcase": "off",
    "no-useless-constructor": "off",
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1,
        "VariableDeclarator": 1,
        "outerIIFEBody": 1,
        "MemberExpression": 1,
        "FunctionDeclaration": {
          "parameters": 1,
          "body": 1
        },
        "FunctionExpression": {
          "parameters": 1,
          "body": 1
        },
        "CallExpression": {
          "arguments": 1
        },
        "ArrayExpression": 1,
        "ObjectExpression": 1,
        "ImportDeclaration": 1,
        "flatTernaryExpressions": false,
        "ignoreComments": false
      }
    ]
  }
}
